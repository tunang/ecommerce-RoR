<%= provide(:title, "Sign up")%>


<div class="max-w-md mx-auto p-6 bg-white rounded-xl shadow-md">
  <h1 class="text-3xl font-semibold text-center mb-6 text-gray-800">
    Create New Account
  </h1>

  <%= form_with(model: @user, class: "space-y-4") do |f|%>
    <!-- <pre><%= @user.errors.to_hash %></pre> -->
    <div>
      <%= f.label :name, class: 'block text-sm font-medium text-gray-700' %>
      <%=
        f.text_field :name,
                     class:
                       'mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500'
      %>
      <% if @user.errors[:name].any? %>
        <p class="mt-1 text-sm text-red-600">
          Name <%= @user.errors[:name].first %>
        </p>
      <% end %>
    </div>

    <div>
      <%= f.label :email, class: 'block text-sm font-medium text-gray-700' %>
      <%=
        f.text_field :email,
                     class:
                       'mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500'
      %>
      <% if @user.errors[:email].any? %>
        <p class="mt-1 text-sm text-red-600">
          Email <%= @user.errors[:email].first %>
        </p>
      <% end %>
    </div>

    <div>
      <%= f.label :password, class: 'block text-sm font-medium text-gray-700' %>
      <%=
        f.password_field :password,
                         class:
                           'mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500'
      %>
      <% if @user.errors[:password].any? %>
        <p class="mt-1 text-sm text-red-600">
          Password <%= @user.errors[:password].first %>
        </p>
      <% end %>
    </div>

    <div>
      <%=
        f.label :password_confirmation,
                class: 'block text-sm font-medium text-gray-700'
      %>
      <%=
        f.password_field :password_confirmation,
                         class:
                           'mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500'
      %>
      <% if @user.errors[:password_confirmation].any? %>
        <p class="mt-1 text-sm text-red-600">
          Password confirmation
          <%= @user.errors[:password_confirmation].first %>
        </p>
      <% end %>
    </div>

    <div>
      <%=
        f.submit 'Create my account',
                 class:
                   'w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded-md transition duration-200'
      %>
    </div>
  <% end %>
</div>
