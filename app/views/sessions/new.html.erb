<%= provide(:title, 'Login') %>

<div class="max-w-md mx-auto p-6 bg-white rounded-xl shadow-md">
  <h1 class="text-3xl font-semibold text-center mb-6 text-gray-800">Login</h1>
  <%= form_with(url: login_path, scope: :session, class: "space-y-4") do |f| %>
    <div>
      <%= f.label :email, class: 'block text-sm font-medium text-gray-700' %>
      <%=
        f.text_field :email,
                     class:
                       'mt-4 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500'
      %>
    </div>

    <div>
      <%= f.label :password, class: 'block text-sm font-medium text-gray-700' %>
      <%=
        f.password_field :password,
                         class:
                           'mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500'
      %>
    </div>
    <%= f.label :remember_me, class: "checkbox inline" do %>
      <%= f.check_box :remember_me %>
      <span>Remember me on this computer</span>
    <% end %>
    <div>
      <%=
        f.submit 'Login',
                 class:
                   'w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded-md transition duration-200'
      %>
    </div>
  <%end%>
</div>
